{
  "name": "rendertron",
  "version": "2.0.1",
  "description": "Renders webpages using headless Chrome for usage by bots",
  "license": "Apache-2.0",
  "repository": "https://github.com/GoogleChrome/rendertron",
  "engines": {
    "node": ">=7"
  },
  "main": "build/rendertron.js",
  "types": "build/rendertron.d.ts",
  "bin": "bin/rendertron",
  "scripts": {
    "dev": "npm run build && npm run start",
    "build": "tsc",
    "prepack": "npm run build",
    "start:rendertron": "npm run build && node build/rendertron.js",
    "start": "npm run build && npm run start:client",
    "start:client": "node build/rendertron-client.js",
    "start:sample": "npm run build && npm run start:client:sample",
    "start:client:sample": "node build/rendertron-client-sample.js",
    "format": "find src -name '*.ts' | xargs clang-format --style=file -i",
    "lint": "tslint --project . --format stylish",
    "monitor": "nodemon src/main.js",
    "monitor-inspect": "nodemon --inspect src/main.js",
    "test": "(cd test-resources && npm install) && npm run build && ava build/test/app-test.js --timeout 5s",
    "start-emulator": "(gcloud beta emulators datastore start --no-store-on-disk --project emulator-project &) 2>&1 | grep -m1 'now running'",
    "test-cache": "npm run start-emulator && $(gcloud beta emulators datastore env-init) && export GCLOUD_PROJECT='emulator-project' && ava build/test/datastore-cache-test.js"
  },
  "dependencies": {
    "@google-cloud/datastore": "^2.0.0",
    "@types/async": "^2.0.50",
    "@types/fs-extra": "^5.0.4",
    "@types/jsonpath": "^0.2.0",
    "@types/node-fetch": "^2.1.4",
    "@webcomponents/webcomponentsjs": "^2.2.0",
    "async": "^2.6.1",
    "chrome-launcher": "^0.10.5",
    "chrome-remote-interface": "^0.26.1",
    "cross-env": "^5.2.0",
    "fs-extra": "^7.0.1",
    "jsonpath": "^1.0.0",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-route": "^3.2.0",
    "koa-send": "^5.0.0",
    "koa-static": "^5.0.0",
    "node-fetch": "^2.3.0",
    "performance-now": "^2.1.0",
    "progress-bar-element": "^2.0.1",
    "puppeteer": "^1.10.0",
    "semver": "^5.6.0",
    "uuid": "^3.3.2",
    "xml-js": "^1.6.8"
  },
  "devDependencies": {
    "@types/google-cloud__datastore": "^1.3.3",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-compress": "^2.0.8",
    "@types/koa-route": "^3.2.4",
    "@types/koa-send": "^4.1.1",
    "@types/koa-static": "^4.0.0",
    "@types/puppeteer": "^1.10.0",
    "@types/supertest": "^2.0.6",
    "ava": "0.25.0",
    "nodemon": "^1.18.6",
    "supertest": "^3.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
